{
  "manifest_version": 3,
  "name": "Gmail Assistant",
  "version": "1.0",
  "description": "Gmail Integration Extension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://api.groq.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["emailProcessor.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
} 